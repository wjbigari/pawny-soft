<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ak.mealplanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity
            android:name=".profile"
            android:label="About"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RecipeBook"
            android:label="@string/title_activity_recipe_book"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Favorites"
            android:label="Favorites"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditProfile"
            android:label="Profile"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditGender"
            android:label="Edit"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Goals"
            android:label="Goals"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FoodActivity"
            android:label="Item"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Results"
            android:label="Recommendation"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Cart"
            android:label="Cart"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FirstStartActivity"
            android:label="MealPlanner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipeBuildActivity"
            android:label="Recipe Builder"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".RecipeActivity"
            android:label="Recipe Item"
            android:parentActivityName=".RecipeBuildActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RecipeSaveActivity"
            android:label="Save Recipe"
            android:parentActivityName=".RecipeBuildActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserRecipeActivity"
            android:label="Recipe"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".FirstStartActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>