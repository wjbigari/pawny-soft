<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ak.mealplanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".Activities.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="CAMP"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Activities.AboutActivity"
            android:label="About"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.FavoritesActivity"
            android:label="Favorites"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.EditProfileActivity"
            android:label="Profile"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.GoalsActivity"
            android:label="Goals"
            android:parentActivityName=".Activities.EditProfileActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.FoodActivity"
            android:label="Item"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.CartActivity"
            android:label="Cart"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.FirstStartActivity"
            android:label="CAMP">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.RecipeBuildActivity"
            android:label="Recipe Builder"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.RecipeActivity"
            android:label="Recipe Item"
            android:parentActivityName=".Activities.RecipeBuildActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.RecipeSaveActivity"
            android:label="Save Recipe"
            android:parentActivityName=".Activities.RecipeBuildActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.MealHistoryActivity"
            android:label="Meal History"
            android:parentActivityName=".Activities.RecipeBuildActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.UserRecipeActivity"
            android:label="Recipe"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="Login"
            android:parentActivityName=".Activities.FirstStartActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.RatioActivity"
            android:label="Ratios"
            android:parentActivityName=".Activities.GoalsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.ResultsActivity"></activity>
    </application>

</manifest>