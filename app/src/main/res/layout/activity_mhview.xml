<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ak.mealplanner.Activities.FavoritesActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/te"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BREAKFAST"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/mh_b_list"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </ListView>

    <TextView
        android:id="@+id/mh_lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LUNCH"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/mh_l_list"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </ListView>

    <TextView
        android:id="@+id/mh_dinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DINNER"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/mh_d_list"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </ListView>

    <TextView
        android:id="@+id/mealPlanHistString"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAlignment="center" />
</LinearLayout>